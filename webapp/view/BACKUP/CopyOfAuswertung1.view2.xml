<mvc:View controllerName="de.mangels.controller.Auswertung1" height="100%"
	xmlns="sap.suite.ui.commons"
	xmlns:m="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:viz="sap.viz.ui5.controls"
	xmlns:layout="sap.ui.layout"
	xmlns:core="sap.ui.core">
	
	<m:Page title="{i18n>auswertung}" showNavButton="true" navButtonPress="onNavButtonPressed" backgroundDesign="Solid">
		<m:headerContent>
			<m:ToggleButton icon="sap-icon://full-screen" press="handleFullscreen" class="sapUiSmallMarginBottom" tooltip="{i18n>fullscreen}"/>
			<m:Image decorative="false" densityAware="false" press="handleImage3Press" src="images/sonne.png" width="3em">
				<m:layoutData>
					<m:FlexItemData growFactor="1"/>
				</m:layoutData>
			</m:Image>
		</m:headerContent>


	<layout:Splitter width="100%" height="100%">
		<layout:contentAreas>
			<!--		<m:DatePicker-->
			<!--id="DP2"-->
			<!--value="2014-03-26" valueFormat="yyyy-MM-dd" displayFormat="long"-->
			<!--change="handleChange"-->
			<!--class="sapUiSmallMarginBottom"/>-->
							<!--<layout:Label text="DatePicker with given Value and Formatter" labelFor="DP2"/>-->
			<ChartContainer
				id="chartContainer"
				showFullScreen="false"
				showPersonalization="false"
				autoAdjustHeight="true"
				showLegend="false"
				showLegendButton="false"
				showSelectionDetails="false"
				contentChange="attachContentChange"
				title="{i18n>auswertung}">

				<dimensionSelectors>
					<m:Select id="dimensionSelector1" change="handleSelectionChange1">
						<core:Item key="0" text="{i18n>einspeisung}"/>
						<core:Item key="1" text="{i18n>verbrauch}"/>
					</m:Select>
					<m:Select id="dimensionSelector2" change="handleSelectionChange2">
						<core:Item key="0" text="{i18n>tage}"/>
						<core:Item key="1" text="{i18n>wochen}"/>
						<core:Item key="2" text="{i18n>monate}"/>
						<core:Item key="3" text="{i18n>jahre}"/>
					</m:Select>
				</dimensionSelectors>

				<customIcons>
					<core:Icon id="customIcon" src="sap-icon://date-time" tooltip="{i18n>enterdate}" press="onEnterDatePress" width="2em"></core:Icon>
				</customIcons>

				<content>
					<ChartContainerContent
						icon="sap-icon://vertical-bar-chart"
						title="Column Chart">
						<content>
							<viz:Popover id="idPopOver"></viz:Popover>
							<viz:VizFrame id="Chart1" height="700px" width="100%"
							              uiConfig="{applicationSet:'fiori'}"></viz:VizFrame>
						</content>
					</ChartContainerContent>
				</content>
			</ChartContainer>
		</layout:contentAreas>
	</layout:Splitter>

	</m:Page>
</mvc:View>